---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import Logo from '../components/Logo.astro';
import AnimatedHero from '../components/AnimatedHero.tsx';
import bannerImage from '../assets/images/image-03-banner-999x248.jpg';
import mainBuilding from '../assets/images/image-01-main-building-369x450.jpg';
---

<BaseLayout title="Nevada General Contractor | Las Vegas" description="Licensed Nevada general contractor since 2006. Specializing in commercial construction, design-build, and project management in Las Vegas. License #66668.">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div>
          <div class="mb-8">
            <Logo size="hero" class="pointer-events-none" />
          </div>
          
          <AnimatedHero
            client:load
            title="Global Management"
            titleAccent="& Construction"
            tagline="Creative vision, bold design."
            description="Professional construction and management services with a commitment to quality, integrity, and client satisfaction since 2004."
            ctaText="Get a Free Quote"
            ctaHref="/contact"
            secondaryText="Our Services"
            secondaryHref="/services"
          />
        </div>
        
        <div class="relative hidden lg:flex items-center justify-center">
          <div class="relative">
            <div class="relative w-[320px] h-[320px] md:w-[400px] md:h-[400px]">
              <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
                <g fill="none" stroke="#1B3A5C" stroke-width="1.5">
                  <circle cx="50" cy="50" r="45"/>
                  <ellipse cx="50" cy="50" rx="45" ry="15"/>
                  <ellipse cx="50" cy="35" rx="38" ry="12"/>
                  <ellipse cx="50" cy="65" rx="38" ry="12"/>
                  <ellipse cx="50" cy="50" rx="15" ry="45"/>
                  <ellipse cx="50" cy="50" rx="30" ry="45"/>
                  <ellipse cx="50" cy="50" rx="45" ry="45"/>
                  <line x1="50" y1="5" x2="50" y2="95"/>
                  <line x1="5" y1="50" x2="95" y2="50"/>
                </g>
              </svg>
            </div>
            
            <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 px-5 py-3 bg-white rounded-xl border border-border shadow-md">
              <div class="flex items-center gap-4 text-sm">
                <div class="text-center">
                  <div class="text-xl font-bold text-amber">20+</div>
                  <div class="text-text-muted text-xs">Years</div>
                </div>
                <div class="w-px h-8 bg-border"></div>
                <div class="text-center">
                  <div class="text-lg font-bold text-accent-500">500+</div>
                  <div class="text-text-muted text-xs">Projects</div>
                </div>
                <div class="w-px h-8 bg-border"></div>
                <div class="text-center">
                  <div class="text-xl font-bold text-amber">100%</div>
                  <div class="text-text-muted text-xs">Licensed</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Overview Section -->
  <section class="py-16 md:py-24 relative scroll-fade">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-amber text-sm font-semibold uppercase tracking-wider mb-4 block">Our Firm</span>
          <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6">
            Established in 2004
          </h2>
          <p class="text-lg text-text-secondary mb-6 leading-relaxed">
            The Company was established in 2004 by two accomplished engineers who amassed a vast wealth of experience internationally as well as locally. The founding Principals have participated in projects ranging from simple remodeling of space to complex airports and infrastructure projects.
          </p>
          <p class="text-lg text-text-secondary mb-8 leading-relaxed">
            The strength of the company, technically, financially and ethically have allowed us to complete numerous projects successfully and gain our clients trust, confidence and friendship. The wealth of experience of our team allows us to find creative solutions for construction challenges that might rise during the course of the project.
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="px-4 py-2 bg-accent-50 rounded-lg border border-border">
              <span class="text-accent-500 font-semibold">License #66668</span>
            </div>
            <div class="px-4 py-2 bg-white rounded-lg border border-border">
              <span class="text-text-secondary">$6.8 Million Limit</span>
            </div>
            <div class="px-4 py-2 bg-white rounded-lg border border-border">
              <span class="text-text-secondary">Licensed Since 2006</span>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="rounded-2xl overflow-hidden border border-border">
            <Image 
              src={mainBuilding} 
              alt="Global Management & Construction - Main Building Project" 
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview Section -->
  <section class="py-16 md:py-24 relative scroll-fade">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <span class="text-amber text-sm font-semibold uppercase tracking-wider mb-4 block">What We Do</span>
        <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-6">
          Our Services
        </h2>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Comprehensive construction and management solutions for your project needs
        </p>
      </div>
      
