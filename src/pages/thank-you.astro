---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Thank You" description="Thank you for contacting Global Management & Construction Corp. We'll respond to your inquiry within 24 hours.">
  <section class="min-h-[80vh] flex items-center justify-center py-16 md:py-24 relative">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <!-- Success Icon -->
      <div class="w-20 h-20 bg-accent-50 text-accent-500 rounded-full flex items-center justify-center mx-auto mb-8">
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      
      <!-- Heading -->
      <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-6">
        Thank You!
      </h1>
      
      <p class="text-xl text-text-secondary mb-4">
        Your message has been sent successfully.
      </p>
      
      <p class="text-lg text-text-secondary mb-10">
        We appreciate you contacting Global Management & Construction. Our team will review your inquiry and respond within <span class="text-amber font-semibold">24 hours</span>.
      </p>
      
      <!-- Timeline Card -->
      <div class="p-6 bg-white rounded-2xl border border-border mb-10">
        <h2 class="text-lg font-semibold text-text-primary mb-4">What Happens Next?</h2>
        <ul class="space-y-3 text-left">
          <li class="flex items-start gap-3">
            <span class="w-6 h-6 bg-accent-50 text-accent-500 rounded-full flex items-center justify-center flex-shrink-0 text-sm font-semibold">1</span>
            <span class="text-text-secondary">Our team reviews your message</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="w-6 h-6 bg-accent-50 text-accent-500 rounded-full flex items-center justify-center flex-shrink-0 text-sm font-semibold">2</span>
            <span class="text-text-secondary">We'll contact you via email or phone</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="w-6 h-6 bg-accent-50 text-accent-500 rounded-full flex items-center justify-center flex-shrink-0 text-sm font-semibold">3</span>
            <span class="text-text-secondary">We'll schedule a consultation if needed</span>
          </li>
        </ul>
      </div>
      
      <!-- Contact Info Fallback -->
      <div class="p-6 bg-white rounded-2xl border border-border mb-10">
        <h2 class="text-lg font-semibold text-text-primary mb-4">Need Immediate Assistance?</h2>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href="tel:702-890-0900" 
            class="flex items-center justify-center gap-2 px-4 py-2 bg-accent-50 hover:bg-accent-100 rounded-xl transition-all text-accent-500"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            702-890-0900
          </a>
          <a 
            href="tel:702-505-1344" 
            class="flex items-center justify-center gap-2 px-4 py-2 bg-accent-50 hover:bg-accent-100 rounded-xl transition-all text-accent-500"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            702-505-1344
          </a>
        </div>
      </div>
      
      <!-- Back Home Button -->
      <a 
        href="/" 
        class="group inline-flex items-center gap-2 px-8 py-4 bg-amber hover:bg-amber-dark text-white font-semibold rounded-xl transition-all duration-300"
      >
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Home
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 2s ease-in-out infinite;
  }
</style>
