---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Contact Global Management & Construction Corp. for your construction needs in Las Vegas, Nevada. Call 702-890-0900.">
  <section class="py-20 md:py-32 relative">
    <!-- Background gradient -->
    <div class="absolute top-40 right-0 w-[400px] h-[400px] bg-gradient-to-l from-accent-500/10 to-transparent rounded-full blur-[100px]"></div>
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <span class="text-accent-400 text-sm font-semibold uppercase tracking-wider mb-4 block">Get In Touch</span>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Contact Us
        </h1>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Get in touch for a free consultation and quote
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold text-white mb-8">Let's Talk</h2>
          
          <div class="space-y-6">
            <a href="tel:702-890-0900" class="group flex items-start gap-4 p-4 bg-dark-800/50 rounded-xl border border-border hover:border-accent-500/50 transition-all">
              <div class="w-12 h-12 bg-gradient-to-br from-accent-500/20 to-vibrant-orange/20 text-accent-400 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Phone</h3>
                <span class="text-accent-400 group-hover:text-accent-300 transition-colors">
                  702-890-0900
                </span>
              </div>
            </a>
            
            <div class="flex items-start gap-4 p-4 bg-dark-800/50 rounded-xl border border-border">
              <div class="w-12 h-12 bg-gradient-to-br from-vibrant-purple/20 to-vibrant-pink/20 text-vibrant-purple rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Address</h3>
                <p class="text-text-secondary">
                  9500 Hillwood Dr, Suite #201<br />
                  Las Vegas, NV 89134
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-4 p-4 bg-dark-800/50 rounded-xl border border-border">
              <div class="w-12 h-12 bg-gradient-to-br from-vibrant-cyan/20 to-vibrant-blue/20 text-vibrant-cyan rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">License</h3>
                <p class="text-text-secondary">
                  Nevada Contractor License #66668
                </p>
              </div>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-dark-800/50 rounded-xl border border-border">
            <h3 class="font-semibold text-white mb-3">Business Hours</h3>
            <div class="space-y-2 text-sm text-text-secondary">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span class="text-accent-400">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span class="text-text-muted">By Appointment</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span class="text-text-muted">Closed</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form Placeholder -->
        <div class="p-8 bg-dark-800/50 rounded-2xl border border-border">
          <h2 class="text-2xl font-semibold text-white mb-6">Send a Message</h2>
          <p class="text-text-secondary mb-6">
            Contact form coming in Phase 4. For now, please call us directly or visit our office.
          </p>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-text-secondary mb-2">Name</label>
              <input type="text" disabled placeholder="Your name" class="w-full px-4 py-3 bg-dark-700 border border-border rounded-xl text-text-muted placeholder-text-muted cursor-not-allowed" />
            </div>
            <div>
              <label class="block text-sm font-medium text-text-secondary mb-2">Email</label>
              <input type="email" disabled placeholder="your@email.com" class="w-full px-4 py-3 bg-dark-700 border border-border rounded-xl text-text-muted placeholder-text-muted cursor-not-allowed" />
            </div>
            <div>
              <label class="block text-sm font-medium text-text-secondary mb-2">Message</label>
              <textarea disabled placeholder="Your message" rows="4" class="w-full px-4 py-3 bg-dark-700 border border-border rounded-xl text-text-muted placeholder-text-muted cursor-not-allowed resize-none"></textarea>
            </div>
            <button disabled class="w-full px-6 py-4 bg-dark-600 text-text-muted font-semibold rounded-xl cursor-not-allowed border border-border">
              Form Coming Soon
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
