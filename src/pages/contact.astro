---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact Us | Las Vegas General Contractor | Free Consultation" description="Contact Global Management & Construction Corp. Call 702-890-0900 or visit our Las Vegas office for a free consultation.">
  <!-- Page Header -->
  <section class="py-8 md:py-12 relative scroll-fade">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12">
        <span class="text-amber text-sm font-semibold uppercase tracking-wider mb-4 block">Get In Touch</span>
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary" transition:name="page-title">
          Contact Us
        </h1>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold text-text-primary mb-6">Get In Touch Directly</h2>
          
          <!-- Prominent Phone Numbers -->
          <div class="space-y-4 mb-8">
            <a href="tel:702-890-0900" class="group flex items-center gap-4 p-5 bg-white rounded-xl border border-border hover:border-accent-500/50 transition-all">
              <div class="w-14 h-14 bg-amber/10 text-amber rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-medium text-text-muted mb-0.5">Office</h3>
                <span class="text-xl font-bold text-accent-500 group-hover:text-accent-600 transition-colors">
                  702-890-0900
                </span>
              </div>
            </a>
            
            <a href="tel:702-505-1344" class="group flex items-center gap-4 p-5 bg-white rounded-xl border border-border hover:border-accent-500/50 transition-all">
              <div class="w-14 h-14 bg-amber/10 text-amber rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-medium text-text-muted mb-0.5">Mobile</h3>
                <span class="text-xl font-bold text-accent-500 group-hover:text-accent-600 transition-colors">
                  702-505-1344
                </span>
              </div>
            </a>
          </div>
          
          <!-- Address -->
          <div class="flex items-start gap-4 p-5 bg-white rounded-xl border border-border mb-4">
            <div class="w-14 h-14 bg-accent-50 text-accent-500 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-sm font-medium text-text-muted mb-1">Address</h3>
              <p class="text-base font-semibold text-text-primary">
                Global Management & Construction<br />
                9500 Hillwood Dr, Ste# 201<br />
                Las Vegas, NV 89134
              </p>
            </div>
          </div>
          
          <!-- License -->
          <div class="flex items-start gap-4 p-5 bg-white rounded-xl border border-border mb-4">
            <div class="w-14 h-14 bg-accent-50 text-accent-500 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="text-sm font-medium text-text-muted mb-1">License</h3>
              <p class="text-base font-semibold text-text-primary">
                Nevada Contractor License #66668
              </p>
              <p class="text-sm text-text-secondary">$6.8 Million Limit</p>
            </div>
          </div>
          
          <!-- Business Hours -->
          <div class="p-5 bg-white rounded-xl border border-border">
            <h3 class="font-semibold text-text-primary mb-3">Business Hours</h3>
            <div class="space-y-2 text-sm text-text-secondary">
              <div class="flex justify-between">
                <span>Monday – Friday</span>
                <span class="text-amber font-medium">8:00 AM – 5:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span class="text-text-muted">By Appointment</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span class="text-text-muted">Closed</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="p-8 bg-white rounded-2xl border border-border">
          <h2 class="text-2xl font-semibold text-text-primary mb-6">Send Us A Message</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Google Maps Embed (Optional) -->
  <section class="py-12 md:py-16 scroll-fade">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="rounded-2xl overflow-hidden border border-border h-[400px] bg-white">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3219.8768951507!2d-115.3066!3d36.1947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c8bf0b9ec9c6a1%3A0x1d8e4c4c4c4c4c4c!2s9500%20Hillwood%20Dr%2C%20Las%20Vegas%2C%20NV%2089134!5e0!3m2!1sen!2sus!4v1706000000000!5m2!1sen!2sus"
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Global Management & Construction Office Location"
          class="grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-500"
        ></iframe>
      </div>
    </div>
  </section>
</BaseLayout>
