---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Contact Global Management & Construction Corp. for your construction needs in Las Vegas, Nevada. Call 702-890-0900.">
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-neutral-600">
          Get in touch for a free consultation
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold text-neutral-900 mb-6">Get In Touch</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 text-primary-700 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Phone</h3>
                <a href="tel:702-890-0900" class="text-primary-600 hover:text-primary-700 transition-colors">
                  702-890-0900
                </a>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 text-primary-700 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Address</h3>
                <p class="text-neutral-600">
                  9500 Hillwood Dr, Suite #201<br />
                  Las Vegas, NV 89134
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 text-primary-700 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">License</h3>
                <p class="text-neutral-600">
                  Nevada Contractor License #66668
                </p>
              </div>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-primary-50 rounded-xl">
            <h3 class="font-semibold text-primary-900 mb-2">Business Hours</h3>
            <p class="text-primary-700 text-sm">
              Monday - Friday: 8:00 AM - 5:00 PM<br />
              Saturday: By Appointment<br />
              Sunday: Closed
            </p>
          </div>
        </div>
        
        <!-- Contact Form Placeholder -->
        <div class="bg-white p-8 rounded-xl shadow-lg border border-neutral-200">
          <h2 class="text-2xl font-semibold text-neutral-900 mb-6">Send a Message</h2>
          <p class="text-neutral-600 mb-6">
            Contact form coming in Phase 4. For now, please call us directly or visit our office.
          </p>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-1">Name</label>
              <input type="text" disabled placeholder="Your name" class="w-full px-4 py-2 border border-neutral-300 rounded-lg bg-neutral-100 text-neutral-400 cursor-not-allowed" />
            </div>
            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-1">Email</label>
              <input type="email" disabled placeholder="your@email.com" class="w-full px-4 py-2 border border-neutral-300 rounded-lg bg-neutral-100 text-neutral-400 cursor-not-allowed" />
            </div>
            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-1">Message</label>
              <textarea disabled placeholder="Your message" rows="4" class="w-full px-4 py-2 border border-neutral-300 rounded-lg bg-neutral-100 text-neutral-400 cursor-not-allowed resize-none"></textarea>
            </div>
            <button disabled class="w-full px-6 py-3 bg-neutral-300 text-neutral-500 font-semibold rounded-lg cursor-not-allowed">
              Form Coming Soon
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
