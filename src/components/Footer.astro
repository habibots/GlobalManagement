---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'Gallery', href: '/gallery' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' }
];
---

<footer class="bg-slate-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="py-12 md:py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">
      
      <!-- Column 1: Company Info & License -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="flex items-center justify-center w-10 h-10 bg-amber text-white font-bold rounded-xl">
            G
          </div>
          <div>
            <div class="font-bold text-lg text-white">Global Management</div>
            <div class="text-sm text-gray-400">& Construction Corp.</div>
          </div>
        </div>
        <p class="text-gray-400 text-sm max-w-md mb-5">
          Quality construction and management services in Nevada. Licensed, insured, and committed to excellence in every project.
        </p>
        <div class="p-4 bg-white/5 rounded-xl border border-white/10">
          <p class="text-sm text-gray-300 font-medium mb-1">Nevada Contractor License #66668</p>
          <p class="text-sm text-gray-400">$6.8 Million Limit &middot; Licensed Since 2006</p>
        </div>
      </div>
      
      <!-- Column 2: Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-4">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-amber transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Column 3: Contact Info & Hours -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-4">
          Contact Us
        </h3>
        <ul class="space-y-4 text-sm">
          <li>
            <a 
              href="tel:702-890-0900" 
              class="flex items-center gap-3 text-gray-300 hover:text-amber transition-colors"
            >
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              702-890-0900
            </a>
          </li>
          <li>
            <a 
              href="tel:702-505-1344" 
              class="flex items-center gap-3 text-gray-300 hover:text-amber transition-colors"
            >
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              702-505-1344
            </a>
          </li>
          <li class="flex items-start gap-3 text-gray-400">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>
              9500 Hillwood Dr, Ste# 201<br />
              Las Vegas, NV 89134
            </span>
          </li>
        </ul>
        
        <!-- Business Hours -->
        <div class="mt-6 pt-5 border-t border-white/10">
          <h4 class="text-sm font-semibold text-gray-400 mb-3">Business Hours</h4>
          <div class="space-y-1.5 text-sm">
            <div class="flex justify-between text-gray-400">
              <span>Mon – Fri</span>
              <span class="text-gray-300">8:00 AM – 5:00 PM</span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>Saturday</span>
              <span class="text-gray-500">By Appointment</span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>Sunday</span>
              <span class="text-gray-500">Closed</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="py-6 border-t border-white/10 text-center text-sm text-gray-500">
      <p>
        &copy; {currentYear} Global Management & Construction Corp. All rights reserved.
      </p>
    </div>
  </div>
</footer>
