---
interface Props {
  title: string;
  titleAccent: string;
  tagline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
  secondaryText?: string;
  secondaryHref?: string;
}

const { title, titleAccent, tagline, description, ctaText, ctaHref, secondaryText, secondaryHref } = Astro.props;
---

<div>
  <div class="hero-animate hero-delay-0 mb-8">
    <span class="inline-flex items-center gap-2 px-4 py-1.5 bg-[#1B3A5C]/10 border border-[#1B3A5C]/20 text-[#1B3A5C] rounded-full text-sm font-medium">
      <span class="w-2 h-2 bg-[#C17817] rounded-full"></span>
      Nevada Licensed Contractor #66668
    </span>
  </div>
  
  <h1 class="hero-animate hero-delay-1 text-4xl sm:text-5xl lg:text-6xl font-bold leading-[1.1] mb-6">
    <span class="text-[#1a1a1a]">{title}</span>
    <br />
    <span class="text-[#C17817]">{titleAccent}</span>
  </h1>
  
  <p class="hero-animate hero-delay-2 text-xl sm:text-2xl text-[#1B3A5C] font-medium mb-6">
    {tagline}
  </p>
  
  <p class="hero-animate hero-delay-3 text-lg text-[#4B5563] mb-10 max-w-lg">
    {description}
  </p>
  
  <div class="hero-animate hero-delay-4 flex flex-wrap gap-4">
    <a 
      href={ctaHref}
      class="group px-8 py-4 bg-[#9A5F12] hover:bg-[#8B5511] text-white font-semibold rounded-xl transition-all duration-300 active:scale-95"
    >
      {ctaText}
      <span class="inline-block ml-2 transition-transform group-hover:translate-x-1">â†’</span>
    </a>
    {secondaryText && secondaryHref && (
      <a 
        href={secondaryHref}
        class="px-8 py-4 bg-[#1B3A5C]/5 hover:bg-[#1B3A5C]/10 text-[#1B3A5C] font-semibold rounded-xl transition-all duration-300 border border-[#1B3A5C]/20 hover:border-[#1B3A5C]/40 active:scale-95"
      >
        {secondaryText}
      </a>
    )}
  </div>
</div>

<style>
  .hero-animate {
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeInUp 0.6s ease-out forwards;
  }

  .hero-delay-0 { animation-delay: 0s; }
  .hero-delay-1 { animation-delay: 0.1s; }
  .hero-delay-2 { animation-delay: 0.2s; }
  .hero-delay-3 { animation-delay: 0.3s; }
  .hero-delay-4 { animation-delay: 0.4s; }

  @keyframes heroFadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-animate {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>
