---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'hero';
  showText?: boolean;
}

const { class: className = '', size = 'md', showText = true } = Astro.props;

const sizes = {
  sm: 'h-8 w-8',
  md: 'h-10 w-10',
  lg: 'h-12 w-12',
  xl: 'h-16 w-16',
  hero: 'h-24 w-24 md:h-32 md:w-32'
};
---

<a href="/" class:list={["flex items-center gap-3 group", className]}>
  <div class:list={["relative flex-shrink-0", sizes[size]]}>
    <!-- Globe Logo SVG - Accurate Earth Continents -->
    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" class="w-full h-full drop-shadow-lg">
      <defs>
        <linearGradient id="goldFill" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#D4AF37"/>
          <stop offset="50%" style="stop-color:#FFD700"/>
          <stop offset="100%" style="stop-color:#B8860B"/>
        </linearGradient>
        <radialGradient id="globeShine" cx="30%" cy="30%" r="70%">
          <stop offset="0%" style="stop-color:#333333"/>
          <stop offset="100%" style="stop-color:#0a0a0a"/>
        </radialGradient>
        <radialGradient id="shineOverlay" cx="25%" cy="25%" r="50%">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.15"/>
          <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0"/>
        </radialGradient>
        <clipPath id="globeClip">
          <circle cx="50" cy="50" r="46"/>
        </clipPath>
      </defs>
      
      <!-- Globe background -->
      <circle cx="50" cy="50" r="46" fill="url(#globeShine)"/>
      
      <!-- Continents - Accurate shapes clipped to globe -->
      <g clip-path="url(#globeClip)" fill="url(#goldFill)">
        <!-- North America -->
        <path d="M8 22 L12 18 L18 16 L24 15 L28 17 L32 16 L36 18 L38 22 L36 26 L38 30 L42 32 L44 36 L42 40 L38 42 L34 44 L30 48 L26 52 L22 50 L18 46 L14 42 L12 38 L10 34 L8 30 L6 26 L8 22 Z"/>
        <!-- Greenland -->
        <path d="M38 12 L44 10 L50 11 L54 14 L52 18 L48 20 L42 18 L38 15 L38 12 Z"/>
        <!-- South America -->
        <path d="M26 54 L30 52 L34 54 L36 58 L38 64 L40 70 L38 76 L34 80 L30 82 L26 80 L24 74 L22 68 L22 62 L24 58 L26 54 Z"/>
        <!-- Europe -->
        <path d="M52 22 L56 20 L62 21 L66 24 L68 28 L66 32 L62 34 L58 32 L54 30 L52 26 L52 22 Z"/>
        <!-- Africa -->
        <path d="M54 36 L58 34 L64 36 L70 40 L74 46 L76 54 L74 62 L70 68 L64 72 L58 70 L54 64 L52 56 L52 48 L54 42 L54 36 Z"/>
        <!-- Middle East / Arabia -->
        <path d="M68 34 L72 32 L76 34 L78 38 L76 44 L72 46 L68 44 L66 40 L68 34 Z"/>
        <!-- Asia / Russia -->
        <path d="M70 18 L78 16 L86 18 L92 22 L94 28 L92 34 L88 36 L82 34 L78 30 L74 28 L70 24 L70 18 Z"/>
        <!-- India -->
        <path d="M76 46 L80 44 L84 48 L84 54 L80 58 L76 56 L74 50 L76 46 Z"/>
        <!-- Southeast Asia -->
        <path d="M84 50 L88 48 L92 52 L90 58 L86 60 L82 56 L84 50 Z"/>
        <!-- Australia -->
        <path d="M82 68 L88 66 L94 70 L94 76 L90 80 L84 78 L80 74 L82 68 Z"/>
      </g>
      
      <!-- Subtle grid lines -->
      <g stroke="#ffffff" stroke-width="0.2" fill="none" opacity="0.1">
        <ellipse cx="50" cy="50" rx="46" ry="23"/>
        <ellipse cx="50" cy="50" rx="46" ry="35"/>
        <ellipse cx="50" cy="50" rx="23" ry="46"/>
        <ellipse cx="50" cy="50" rx="35" ry="46"/>
      </g>
      
      <!-- Gold outer ring -->
      <circle cx="50" cy="50" r="47.5" fill="none" stroke="url(#goldFill)" stroke-width="1.5" opacity="0.8"/>
      
      <!-- Shine overlay -->
      <circle cx="50" cy="50" r="46" fill="url(#shineOverlay)"/>
    </svg>
  </div>
  
  {showText && (
    <div class="flex flex-col">
      <span class:list={[
        "font-bold text-white group-hover:text-[#FFD700] transition-colors leading-tight",
        size === 'hero' ? 'text-xl md:text-2xl' : size === 'xl' ? 'text-lg' : ''
      ]}>
        Global Management
      </span>
      <span class:list={[
        "text-text-secondary leading-tight",
        size === 'hero' ? 'text-sm md:text-base' : 'text-xs'
      ]}>
        & Construction Corp.
      </span>
    </div>
  )}
</a>
