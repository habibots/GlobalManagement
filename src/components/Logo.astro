---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'hero';
  showText?: boolean;
}

const { class: className = '', size = 'md', showText = true } = Astro.props;

const sizes = {
  sm: 'h-8 w-8',
  md: 'h-10 w-10',
  lg: 'h-12 w-12',
  xl: 'h-16 w-16',
  hero: 'h-24 w-24 md:h-32 md:w-32'
};
---

<a href="/" class:list={["flex items-center gap-3 group", className]}>
  <div class:list={["relative flex-shrink-0", sizes[size]]}>
    <!-- Simple Wireframe Globe - Grid Lines Only -->
    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <g fill="none" stroke="#FFFFFF" stroke-width="1.5">
        <!-- Outer circle -->
        <circle cx="50" cy="50" r="45"/>
        
        <!-- Horizontal latitude lines -->
        <ellipse cx="50" cy="50" rx="45" ry="15"/>
        <ellipse cx="50" cy="35" rx="38" ry="12"/>
        <ellipse cx="50" cy="65" rx="38" ry="12"/>
        
        <!-- Vertical longitude lines -->
        <ellipse cx="50" cy="50" rx="15" ry="45"/>
        <ellipse cx="50" cy="50" rx="30" ry="45"/>
        <ellipse cx="50" cy="50" rx="45" ry="45"/>
        
        <!-- Center vertical line -->
        <line x1="50" y1="5" x2="50" y2="95"/>
        
        <!-- Center horizontal line -->
        <line x1="5" y1="50" x2="95" y2="50"/>
      </g>
    </svg>
  </div>
  
  {showText && (
    <div class="flex flex-col">
      <span class:list={[
        "font-bold text-white group-hover:text-gray-300 transition-colors leading-tight",
        size === 'hero' ? 'text-xl md:text-2xl' : size === 'xl' ? 'text-lg' : ''
      ]}>
        Global Management
      </span>
      <span class:list={[
        "text-text-secondary leading-tight",
        size === 'hero' ? 'text-sm md:text-base' : 'text-xs'
      ]}>
        & Construction Corp.
      </span>
    </div>
  )}
</a>
