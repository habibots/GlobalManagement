---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { class: className = '', size = 'md' } = Astro.props;

const sizes = {
  sm: 'h-8 w-8',
  md: 'h-10 w-10',
  lg: 'h-12 w-12'
};

const textSizes = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg'
};
---

<a href="/" class:list={["flex items-center gap-3 group", className]}>
  <div class:list={["flex items-center justify-center bg-gradient-to-br from-accent-500 to-accent-600 text-white font-bold rounded-xl shadow-lg shadow-accent-500/20", sizes[size], textSizes[size]]}>
    <span>G</span>
  </div>
  <div class="flex flex-col">
    <span class="font-bold text-white group-hover:text-accent-400 transition-colors leading-tight">
      Global Management
    </span>
    <span class="text-xs text-text-secondary leading-tight">
      & Construction Corp.
    </span>
  </div>
</a>
