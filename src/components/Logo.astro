---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { class: className = '', size = 'md' } = Astro.props;

const sizes = {
  sm: 'h-8',
  md: 'h-10',
  lg: 'h-12'
};
---

<a href="/" class:list={["flex items-center gap-3 group", className]}>
  <div class:list={["flex items-center justify-center bg-primary-700 text-white font-bold rounded-lg", sizes[size], size === 'sm' ? 'w-8 text-sm' : size === 'md' ? 'w-10 text-base' : 'w-12 text-lg']}>
    <span>G</span>
  </div>
  <div class="flex flex-col">
    <span class="font-bold text-primary-900 group-hover:text-primary-700 transition-colors leading-tight">
      Global Management
    </span>
    <span class="text-xs text-neutral-500 leading-tight">
      & Construction Corp.
    </span>
  </div>
</a>
